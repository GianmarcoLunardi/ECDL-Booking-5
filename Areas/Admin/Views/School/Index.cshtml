@model IEnumerable<Identity2.Models.Identity.School>;
<h1> School</h1>

<p3>Cliccando sul nome della scuola è possibile gestire le classi</p3>
<p3>Inserimento Gestione</p3>
<p2>   ci siamooo </p2>
<div class="container">
    <!-- Content here -->
    <a class="btn btn-danger" role="button" aria-disabled="true" 
       asp-controller="School"
       asp-action="Create">+</a> <p3> kn serimento di una vuoba classe</p3>
    <br />
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col-8">Scuola</th>
                <th scope="col-3">Città</th>
                <th scope="col-1"></th>

            </tr>

        </thead>


        <tbody>
            @if (Model != null) { 

            <!--     sperimentazione     -->
            @foreach (var scuola in @Model)
            {
                <tr>

                    <td scope="col-8">
                        <a asp-area="Admin"
                           asp-controller="School"
                           asp-action="IndexClass"
                           asp-route-id="@scuola.id">
                            @scuola.Name <br />
                        </a>
                    </td>

                    <td scope="col-3">
                        @scuola.City
                    </td>
                    <td scope="col-1">
                        <a class="btn btn-danger" asp-action="Delete"
                           role="button" asp-route-id="@scuola.id">
                            <i class="bi bi-pencil"></i>M
                        </a>
                        <a class="btn btn-warmin" href="#" role="button">Delete</a>
                    </td>


                </tr>

            }

            }
        </tbody>
    </table>



</div>